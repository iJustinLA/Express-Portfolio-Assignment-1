<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <%- include('../partials/head.ejs') %>
</head>

<body>
  <%- include('../partials/header.ejs', {page: 'login'}) %>
  <main>
    <!-- Login Card section -->
    <section id="contact-me" class="contact-me px-4 py-5">
      <div class="container">
        <div class="row gy-4">
          <%if (message) { %>
            <div class="text-center mb-4 col-lg-8 offset-lg-2">
              <h3 class="dark-color">Authentication error</h3>
              <p><%= message %></p>
            </div>
            <% } %>
          <div class="text-center mb-4 col-lg-8 offset-lg-2">
            <h3 class="dark-color">Login</h3>
            <p>Welcome back! We are delighted to see you again. Kindly sign in to access and explore the full extent of the personal portfolio website.</p>
          </div>
        </div>
        <div class="row gy-4">
          <div class="col-lg-8 offset-lg-2">
            <form class="contact-form p-4 pt-5 pb-5 bg-light rounded-3" method="post" action="/login">
              <div class="row mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" id="username" placeholder="Enter your username" required />
              </div>
              <div class="row mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required />
              </div>
              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Login</button>
                <div class="social-icons">
                  <a href="#" class="text-decoration-none"><i class="bi bi-facebook me-3"></i></a>
                  <a href="#" class="text-decoration-none"><i class="bi bi-twitter me-3"></i></a>
                  <a href="#" class="text-decoration-none"><i class="bi bi-linkedin"></i></a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
  <%- include('../partials/footer.ejs') %>
  <%- include('../partials/scripts.ejs') %>
</body>

</html>